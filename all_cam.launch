<launch>
  <node pkg="gscam" type="gscam" name="cam_0" output="screen">
    <param name="camera_name" value="cam_0"/>
    <param name="frame_id" value="cam_0_link"/>
    <param name="gscam_config" value="v4l2src device=/dev/video0 ! image/jpeg,width=640,height=480,framerate=15/1 ! jpegdec ! videoconvert ! video/x-raw,format=RGB ! appsink name=ros_appsink"/>
    <remap from="camera/image_raw" to="/cam_0/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_1" output="screen">
    <param name="camera_name" value="cam_1"/>
    <param name="frame_id" value="cam_1_link"/>
    <param name="gscam_config" value="v4l2src device=/dev/video1 ! image/jpeg,width=640,height=480,framerate=15/1 ! jpegdec ! videoconvert ! video/x-raw,format=RGB ! appsink name=ros_appsink"/>
    <remap from="camera/image_raw" to="/cam_1/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_2" output="screen">
    <param name="camera_name" value="cam_2"/>
    <param name="frame_id" value="cam_2_link"/>
    <param name="gscam_config" value="v4l2src device=/dev/video2 ! image/jpeg,width=640,height=480,framerate=15/1 ! jpegdec ! videoconvert ! video/x-raw,format=RGB ! appsink name=ros_appsink"/>
    <remap from="camera/image_raw" to="/cam_2/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_3" output="screen">
    <param name="camera_name" value="cam_3"/>
    <param name="frame_id" value="cam_3_link"/>
    <param name="gscam_config" value="v4l2src device=/dev/video3 ! image/jpeg,width=640,height=480,framerate=15/1 ! jpegdec ! videoconvert ! video/x-raw,format=RGB ! appsink name=ros_appsink"/>
    <remap from="camera/image_raw" to="/cam_3/image_raw"/>
  </node>

<launch>
    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_cam_0"
          args="1.0 0 1.0 -1.57 0 -1.57 base_link cam_0_link" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_cam_1"
          args="0.5 0.5 1.0 -1.57 0 -1.57 base_link cam_1_link" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_cam_2"
          args="-1.0 0 1.0 -1.57 0 -1.57 base_link cam_2_link" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="tf_cam_3"
          args="0.5 -0.5 1.0 -1.57 0 -1.57 base_link cam_3_link" />

</launch>
