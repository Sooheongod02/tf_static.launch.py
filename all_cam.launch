<launch>
  <node pkg="gscam" type="gscam" name="cam_0" output="screen">
    <param name="camera_name" value="cam_0"/>
    <param name="frame_id" value="cam_0_link"/>
    
    <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video0 ! video/x-raw,width=640,height=480,framerate=30/1 ! videoconvert" />
    
    <remap from="camera/image_raw" to="/cam_0/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_1" output="screen">
    <param name="camera_name" value="cam_1"/>
    <param name="frame_id" value="cam_1_link"/>
    <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video1 ! video/x-raw,width=640,height=480,framerate=30/1 ! videoconvert" />
    <remap from="camera/image_raw" to="/cam_1/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_2" output="screen">
    <param name="camera_name" value="cam_2"/>
    <param name="frame_id" value="cam_2_link"/>
    <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video2 ! video/x-raw,width=640,height=480,framerate=30/1 ! videoconvert" />
    <remap from="camera/image_raw" to="/cam_2/image_raw"/>
  </node>

  <node pkg="gscam" type="gscam" name="cam_3" output="screen">
    <param name="camera_name" value="cam_3"/>
    <param name="frame_id" value="cam_3_link"/>
    <env name="GSCAM_CONFIG" value="v4l2src device=/dev/video3 ! video/x-raw,width=640,height=480,framerate=30/1 ! videoconvert" />
    <remap from="camera/image_raw" to="/cam_3/image_raw"/>
  </node>
</launch>
